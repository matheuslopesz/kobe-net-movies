<!doctype html>
<html lang="en">
  <head>
    <title>NetMovies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Zilla+Slab&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-dark fixed-top bg-purple-custom flex-md-nowrap p-0 shadow">
      <%= link_to root_path , class:"navbar-brand col-sm-3 col-md-2 mr-0" do %>
        <%= image_tag "/net-movies-white.png", style:"width: 317px"%>
      <% end %>
      <%= form_tag(search_movie_by_query_path) do %>
         <%= text_field_tag :query,'', class: 'form-control form-control-dark w-100', placeholder: "search movie" %>
      <% end %>
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'nav-link') %>  
        </li>
      </ul>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>

