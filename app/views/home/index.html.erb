<link href="https://fonts.googleapis.com/css?family=Zilla+Slab&display=swap" rel="stylesheet">
<div style="margin-top: 100px">
  <h1> Upcoming Movies </h1>
  <div class="container">
    <div class="row">
      <%  @upcoming_movies["results"].each do | movie | %>
        <div class="col-md-3">
          <div class="movie-item">
            <%= content_tag(:div, movie['vote_average'], :class =>"vote-average #{color_average(movie['vote_average'])}") %>
            <div class="movie-poster">
              <%= link_to movie_path(movie['id']) do %>
                <%- if movie["poster_path"].nil? %>
                  <%= image_tag "/poster-not-found-small.png" %>
                <%- else %>
                  <%= image_tag "https://image.tmdb.org/t/p/w200/#{movie["poster_path"]}"%>
                <% end %>
              <% end %>
            </div>
            <div class="movie-title">
              <%= movie['title']  %>
            </div>
            <p><%= format_release_date(movie['release_date'])%></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
